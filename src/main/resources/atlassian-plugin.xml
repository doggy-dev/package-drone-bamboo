<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" i18n-name-key="pd.deploy.plugin.name" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="eu.gemtec.packagedrone.i18n" location="eu.gemtec.packagedrone.i18n"/>

    <taskType key="pdUpload" name="Upload to PackageDrone" class="eu.gemtec.packagedrone.deploy.impl.MyFirstTask">
      <description>A task that prints 'Hello, World!'</description>
      <category name="deployment"/>
      <configuration class="eu.gemtec.packagedrone.deploy.impl.UploadTaskConfigurator"/>
      <resource type="freemarker" name="edit" location="uploaderTask.ftl"/>
    </taskType>
</atlassian-plugin>